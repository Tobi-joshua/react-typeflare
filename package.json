{
  "name": "react-typeflare",
  "version": "1.0.11",
  "description": "A lightweight and customizable React component for typewriter-style text animations with special effects.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build:types": "tsc -p tsconfig.build.json",
    "build:bundle": "webpack --config webpack.lib.config.js",
    "build": "npm run clean && npm run build:types && npm run build:bundle",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.txt"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "babel-loader": "^10.0.0",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tobi-joshua/react-typeflare.git"
  },
  "bugs": {
    "url": "https://github.com/Tobi-joshua/react-typeflare/issues"
  },
  "homepage": "https://github.com/Tobi-joshua/react-typeflare#readme",
  "author": "Tobi Joshua",
  "license": "MIT",
  "keywords": [
    "react",
    "typewriter",
    "animation",
    "typing",
    "react-component",
    "confetti"
  ]
}
